<%- contentFor("body") %> <%- include("../partials/_titleHead.ejs")%>
<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3">
      <%- include("../partials/dashboard/_adminsidemenu.ejs")%>
    </div>
    <div class="col-md-9 mt-3">
      <a href="#" class="btn btn-success float-right" onclick="editUser('')"
        >Add User</a
      >
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Enrolled Trainings</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user)=>{%>
          <tr>
            <td scope="col">#</td>
            <td scope="col"><%=user.name%></td>
            <td scope="col"><%=user.email%></td>
            <td scope="col"><%=user.role%></td>
            <td scope="col">Enrolled Trainings</td>
            <td scope="col">
              <a
                href="#"
                onclick="editUser('<%=user._id%>')"
                class="btn btn-success"
                >Edit</a
              >
              <a
                href="#"
                onclick="userDelete('<%=user._id%>')"
                class="btn btn-danger"
                >Delete</a
              >
            </td>
          </tr>
          <%})%>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Modal -->
<div
  class="modal fade"
  id="userModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Form elementlerini getir

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-Close">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script>
  function editUser(id) {
    $('#userModal').modal();
  }
</script>
