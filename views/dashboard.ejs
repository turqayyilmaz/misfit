<%- include("partials/_titleHead.ejs")%>
<div class="container">
<div class="row">
   <div class="col-md-3 mt-3">
      
      
    <%- include("partials/dashboard/_adminsidemenu.ejs")%>
   </div>
   <div class="col-md-9 mt-2 card">
      <nav class="mt-2">
         <div class="nav nav-tabs" id="nav-tab" role="tablist">
           <a class="nav-item nav-link active" id="nav-users-tab" data-toggle="tab" href="#nav-users" role="tab" aria-controls="nav-users" aria-selected="true"><b>Users</b></a>
           <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-categories" role="tab" aria-controls="nav-categories" aria-selected="false"><b>Categories</b></a>
           <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false"><b>Contact</b></a>
         </div>
       </nav>
       <div class="tab-content" id="nav-tabContent">
         <div class="tab-pane fade show active border" id="nav-users" role="tabpanel" aria-labelledby="nav-users-tab"><%- include("user/adminusers.ejs") %></div>
         <div class="tab-pane fade border" id="nav-categories" role="tabpanel" aria-labelledby="nav-categories-tab">Categories</div>
         <div class="tab-pane fade border" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
       </div>


   </div>
</div>

</div>

<!-- Photo Update Modal-->
<div class="modal fade bd-example-modal-lg" id="updateProfilePhotoModal" tabindex="-1" role="dialog" aria-labelledby="updateProfilePhotoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg border-0">
        <div class="modal-content">
            <div class="modal-header text-center">
                <div class="titlepage mx-auto">
                    <h2 class="title mx-auto">Update Profile Photo</h2>
                </div>
                <button type="button" class="btn btn-outlined-misfit" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center pb-5">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-10 mt-2">
                            <form id="photoForm" class="main_form" method="post" action="/users/profileImage/<%= user._id%>" enctype="multipart/form-data">
                                <div class="col-md-12 mb-2">
                                    <input type="file" id="photoInput" name="photoInput" data-buttonText="Photo" class="img-fluid d-block mx-0 rounded-0 ">
                                </div>
                              
                                <div class="col-md-12 modal-footer">
                                    <button class="btn btn-warning px-4 mb-2 mt-1 mr-2 ml-2" type="submit" > <i class="fa fa-plus-square mr-1"></i>Update</button>
                                    <button class="btn btn-danger px-4 mb-2 mt-1 mr-2 ml-2" type="reset" > <i class="fa fa-minus-circle mr-1"></i>Cancel</button>
                                </div>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>